
# Configure Windows

Set-WindowsExplorerOptions -EnableShowHiddenFilesFoldersDrives -EnableShowProtectedOSFiles -EnableShowFileExtensions -EnableShowFullPathInTitleBar

Update-ExecutionPolicy Unrestricted

# Install Packages

cinst -y googlechrome
cinst -y googledrive
cinst -y dropbox

cinst -y conemu
cinst -y chocolatey
cinst -y git.install
cinst -y sublimetext3
cinst -y sublimetext3.packagecontrol
cinst -y putty.install
cinst -y virtualbox
cinst -y vagrant


cinst -y clipx
cinst -y ccleaner
cinst -y 7zip
cinst -y 7zip.install
cinst -y vlc
cinst -y f.lux
cinst -y notepad2
cinst -y freefilesync
cinst -y jdk8
cinst -y rufus
cinst -y filezilla
